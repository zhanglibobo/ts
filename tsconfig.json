{
  "include": ["./src/*"],
  "exclude": ["./src/hello/**/*"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": false,
    "noEmitOnError": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false
  }
}
